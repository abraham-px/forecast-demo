FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

WORKDIR /app

# Minimal runtime deps (no compilers needed for wheels)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.weather.txt ./
RUN pip install --no-cache-dir -r requirements.weather.txt

COPY app ./app

CMD ["python", "app/scheduler.py", "--jobs", "weather_ingest"]
